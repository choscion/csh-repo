{
  "name": "choscion-repo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "pnpm run lint --fix",
    "prettier": "prettier --check '**/*.{ts,tsx,js,jsx,json}'",
    "prettier:fix": "prettier --write '**/*.{ts,tsx,js,jsx,json}'",
    "check-types": "turbo run check-types",
    "start:docs": "turbo start:docs --filter ui-docs",
    "build:docs": "turbo build:docs",
    "build:watch": "turbo build:watch",
    "publish": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@choscion/eslint-config": "workspace:^",
    "@choscion/prettier-config": "workspace:^",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "5.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "*.{ts,tsx,js,jsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  }
}
